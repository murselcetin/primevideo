<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/filmCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#1B252F">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ImageViewFilm"
                android:layout_width="200dp"
                android:layout_height="114dp"
                app:layout_constraintBottom_toBottomOf="@id/cl"
                app:layout_constraintStart_toStartOf="@id/cl"
                app:layout_constraintTop_toTopOf="@id/cl"
                app:srcCompat="@drawable/dayi" >
            </ImageView>
            <ImageView
                android:id="@+id/ImageViewPlay"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/play"
                app:layout_constraintStart_toStartOf="@id/cl"
                app:layout_constraintBottom_toBottomOf="@id/cl"
                android:layout_margin="15dp"
                />

            <TextView
                android:id="@+id/textViewFilmAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amazon"
                android:text="DayÄ±"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/ImageViewFilm"
                app:layout_constraintTop_toTopOf="@id/cl" />

            <TextView
                android:id="@+id/textViewFilmYil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:text="2021"
                android:textColor="@color/gri"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@id/ImageViewFilm"
                app:layout_constraintTop_toBottomOf="@id/textViewFilmAdi" />

            <TextView
                android:id="@+id/textViewFilmSure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:text="125 dk"
                android:textColor="@color/gri"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@id/textViewFilmYil"
                app:layout_constraintTop_toBottomOf="@id/textViewFilmAdi" />

            <TextView
                android:id="@+id/textViewPrime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/amazon"
                android:text="prime"
                android:textColor="@color/acik_mavi"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@id/ImageViewFilm"
                app:layout_constraintTop_toBottomOf="@id/textViewFilmYil" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@drawable/action"
                app:layout_constraintBottom_toBottomOf="@id/cl"
                app:layout_constraintEnd_toEndOf="@id/cl" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>